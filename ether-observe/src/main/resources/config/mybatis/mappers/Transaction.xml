<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="transaction">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="transactionColumns">
    	<if test="null!=id">
    		and ID = #{id}
    	</if>
    	<if test="null!=blockHash">
    		and BLOCK_HASH = #{blockHash}
    	</if>
    	<if test="null!=txHash">
    		and TX_HASH = #{txHash}
    	</if>
    	<if test="null!=blockNumber">
    		and BLOCK_NUMBER = #{blockNumber}
    	</if>
    	<if test="null!=txFrom">
    		and TX_FROM = #{txFrom}
    	</if>
    	<if test="null!=txTo">
    		and TX_TO = #{txTo}
    	</if>
    	<if test="null!=contractAddress">
    		and CONTRACT_ADDRESS = #{contractAddress}
    	</if>
    	<if test="null!=coinType">
    		and COIN_TYPE = #{coinType}
    	</if>
    	<if test="null!=txInput">
    		and TX_INPUT = #{txInput}
    	</if>
    	<if test="null!=txValue">
    		and TX_VALUE = #{txValue}
    	</if>
    	<if test="null!=txIndex">
    		and TX_INDEX = #{txIndex}
    	</if>
    	<if test="null!=gasLimit">
    		and GAS_LIMIT = #{gasLimit}
    	</if>
    	<if test="null!=gasUsed">
    		and GAS_USED = #{gasUsed}
    	</if>
    	<if test="null!=gasPrice">
    		and GAS_PRICE = #{gasPrice}
    	</if>
    	<if test="null!=actualFee">
    		and ACTUAL_FEE = #{actualFee}
    	</if>
    	<if test="null!=nonce">
    		and NONCE = #{nonce}
    	</if>
    	<if test="null!=txReceiptStatus">
    		and TX_RECEIPT_STATUS = #{txReceiptStatus}
    	</if>
    	<if test="null!=txTime">
    		and TX_TIME = #{txTime}
    	</if>
    	<if test="null!=confirmBlockNumber">
    		and CONFIRM_BLOCK_NUMBER = #{confirmBlockNumber}
    	</if>
    	<if test="null!=txStatus">
    		and TX_STATUS = #{txStatus}
    	</if>
    	<if test="null!=createTime">
    		and CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		and MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="transactionSetColumns">
		    <if test="null!=id">
		    ID = #{id},
		    </if>
		    <if test="null!=blockHash">
		    BLOCK_HASH = #{blockHash},
		    </if>
		    <if test="null!=txHash">
		    TX_HASH = #{txHash},
		    </if>
		    <if test="null!=blockNumber">
		    BLOCK_NUMBER = #{blockNumber},
		    </if>
		    <if test="null!=txFrom">
		    TX_FROM = #{txFrom},
		    </if>
		    <if test="null!=txTo">
		    TX_TO = #{txTo},
		    </if>
		    <if test="null!=contractAddress">
		    CONTRACT_ADDRESS = #{contractAddress},
		    </if>
		    <if test="null!=coinType">
		    COIN_TYPE = #{coinType},
		    </if>
		    <if test="null!=txInput">
		    TX_INPUT = #{txInput},
		    </if>
		    <if test="null!=txValue">
		    TX_VALUE = #{txValue},
		    </if>
		    <if test="null!=txIndex">
		    TX_INDEX = #{txIndex},
		    </if>
		    <if test="null!=gasLimit">
		    GAS_LIMIT = #{gasLimit},
		    </if>
		    <if test="null!=gasUsed">
		    GAS_USED = #{gasUsed},
		    </if>
		    <if test="null!=gasPrice">
		    GAS_PRICE = #{gasPrice},
		    </if>
		    <if test="null!=actualFee">
		    ACTUAL_FEE = #{actualFee},
		    </if>
		    <if test="null!=nonce">
		    NONCE = #{nonce},
		    </if>
		    <if test="null!=txReceiptStatus">
		    TX_RECEIPT_STATUS = #{txReceiptStatus},
		    </if>
		    <if test="null!=txTime">
		    TX_TIME = #{txTime},
		    </if>
		    <if test="null!=confirmBlockNumber">
		    CONFIRM_BLOCK_NUMBER = #{confirmBlockNumber},
		    </if>
		    <if test="null!=txStatus">
		    TX_STATUS = #{txStatus},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="transactionResultMap" type="com.sharingif.blockchain.ether.block.model.entity.Transaction">
        <result property="id" column="ID"/>
        <result property="blockHash" column="BLOCK_HASH"/>
        <result property="txHash" column="TX_HASH"/>
        <result property="blockNumber" column="BLOCK_NUMBER"/>
        <result property="txFrom" column="TX_FROM"/>
        <result property="txTo" column="TX_TO"/>
        <result property="contractAddress" column="CONTRACT_ADDRESS"/>
        <result property="coinType" column="COIN_TYPE"/>
        <result property="txInput" column="TX_INPUT"/>
        <result property="txValue" column="TX_VALUE"/>
        <result property="txIndex" column="TX_INDEX"/>
        <result property="gasLimit" column="GAS_LIMIT"/>
        <result property="gasUsed" column="GAS_USED"/>
        <result property="gasPrice" column="GAS_PRICE"/>
        <result property="actualFee" column="ACTUAL_FEE"/>
        <result property="nonce" column="NONCE"/>
        <result property="txReceiptStatus" column="TX_RECEIPT_STATUS"/>
        <result property="txTime" column="TX_TIME"/>
        <result property="confirmBlockNumber" column="CONFIRM_BLOCK_NUMBER"/>
        <result property="txStatus" column="TX_STATUS"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO TRANSACTION (
        	ID
        	,BLOCK_HASH
        	,TX_HASH
        	,BLOCK_NUMBER
        	,TX_FROM
        	,TX_TO
        	,CONTRACT_ADDRESS
        	,COIN_TYPE
        	,TX_INPUT
        	,TX_VALUE
        	,TX_INDEX
        	,GAS_LIMIT
        	,GAS_USED
        	,GAS_PRICE
        	,ACTUAL_FEE
        	,NONCE
        	,TX_RECEIPT_STATUS
        	,TX_TIME
        	,CONFIRM_BLOCK_NUMBER
        	,TX_STATUS
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{id}
        	,#{blockHash}
        	,#{txHash}
        	,#{blockNumber}
        	,#{txFrom}
        	,#{txTo}
        	,#{contractAddress}
        	,#{coinType}
        	,#{txInput}
        	,#{txValue}
        	,#{txIndex}
        	,#{gasLimit}
        	,#{gasUsed}
        	,#{gasPrice}
        	,#{actualFee}
        	,#{nonce}
        	,#{txReceiptStatus}
        	,#{txTime}
        	,#{confirmBlockNumber}
        	,#{txStatus}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	TRANSACTION 
	    WHERE
	    ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	TRANSACTION 
	    WHERE
	    	1=1
		    <include refid="transactionColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	TRANSACTION 
        <set>
	        <include refid="transactionSetColumns" />
		</set>
	    WHERE
	    ID = #{id} 
	</update>
	
    <select id="queryById" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_HASH
			,TX_HASH
			,BLOCK_NUMBER
			,TX_FROM
			,TX_TO
			,CONTRACT_ADDRESS
			,COIN_TYPE
			,TX_INPUT
			,TX_VALUE
			,TX_INDEX
			,GAS_LIMIT
			,GAS_USED
			,GAS_PRICE
			,ACTUAL_FEE
			,NONCE
			,TX_RECEIPT_STATUS
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION 
		WHERE 
			ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_HASH
			,TX_HASH
			,BLOCK_NUMBER
			,TX_FROM
			,TX_TO
			,CONTRACT_ADDRESS
			,COIN_TYPE
			,TX_INPUT
			,TX_VALUE
			,TX_INDEX
			,GAS_LIMIT
			,GAS_USED
			,GAS_PRICE
			,ACTUAL_FEE
			,NONCE
			,TX_RECEIPT_STATUS
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION
		WHERE
			1=1
			<include refid="transactionColumns" />
		ORDER BY
			ID
	</select>
	
	<select id="queryAll" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_HASH
			,TX_HASH
			,BLOCK_NUMBER
			,TX_FROM
			,TX_TO
			,CONTRACT_ADDRESS
			,COIN_TYPE
			,TX_INPUT
			,TX_VALUE
			,TX_INDEX
			,GAS_LIMIT
			,GAS_USED
			,GAS_PRICE
			,ACTUAL_FEE
			,NONCE
			,TX_RECEIPT_STATUS
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION 
		ORDER BY
			ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			TRANSACTION 
		WHERE
			1=1 
			<include refid="transactionColumns" />
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_HASH
			,TX_HASH
			,BLOCK_NUMBER
			,TX_FROM
			,TX_TO
			,CONTRACT_ADDRESS
			,COIN_TYPE
			,TX_INPUT
			,TX_VALUE
			,TX_INDEX
			,GAS_LIMIT
			,GAS_USED
			,GAS_PRICE
			,ACTUAL_FEE
			,NONCE
			,TX_RECEIPT_STATUS
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION
		WHERE
			1=1
			<include refid="transactionColumns" />
		ORDER BY
			ID
	</select>

	<update id="updateByBlockNumberBlockHash">
		UPDATE
		TRANSACTION
		<set>
			<include refid="transactionSetColumns" />
		</set>
		WHERE
			BLOCK_NUMBER = #{blockNumber}
		AND
			BLOCK_HASH = #{blockHash}
	</update>
	
</mapper>

