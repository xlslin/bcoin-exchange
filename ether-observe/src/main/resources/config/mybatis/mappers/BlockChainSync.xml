<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="blockChainSync">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="blockChainSyncColumns">
    	<if test="null!=id">
    		and ID = #{id}
    	</if>
    	<if test="null!=blockNumber">
    		and BLOCK_NUMBER = #{blockNumber}
    	</if>
    	<if test="null!=type">
    		and TYPE = #{type}
    	</if>
    	<if test="null!=createTime">
    		and CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		and MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="blockChainSyncSetColumns">
		    <if test="null!=id">
		    ID = #{id},
		    </if>
		    <if test="null!=blockNumber">
		    BLOCK_NUMBER = #{blockNumber},
		    </if>
		    <if test="null!=type">
		    TYPE = #{type},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="blockChainSyncResultMap" type="com.sharingif.blockchain.ether.block.model.entity.BlockChainSync">
        <result property="id" column="ID"/>
        <result property="blockNumber" column="BLOCK_NUMBER"/>
        <result property="type" column="TYPE"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO BLOCK_CHAIN_SYNC (
        	ID
        	,BLOCK_NUMBER
        	,TYPE
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{id}
        	,#{blockNumber}
        	,#{type}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	BLOCK_CHAIN_SYNC 
	    WHERE
	    ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	BLOCK_CHAIN_SYNC 
	    WHERE
	    	1=1
		    <include refid="blockChainSyncColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	BLOCK_CHAIN_SYNC 
        <set>
	        <include refid="blockChainSyncSetColumns" />
		</set>
	    WHERE
	    ID = #{id} 
	</update>
	
    <select id="queryById" resultMap="blockChainSyncResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			BLOCK_CHAIN_SYNC 
		WHERE 
			ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="blockChainSyncResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			BLOCK_CHAIN_SYNC
		WHERE
			1=1
			<include refid="blockChainSyncColumns" />
		ORDER BY
			ID
	</select>
	
	<select id="queryAll" resultMap="blockChainSyncResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			BLOCK_CHAIN_SYNC 
		ORDER BY
			ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			BLOCK_CHAIN_SYNC 
		WHERE
			1=1 
			<include refid="blockChainSyncColumns" />
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="blockChainSyncResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,TYPE
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			BLOCK_CHAIN_SYNC
		WHERE
			1=1
			<include refid="blockChainSyncColumns" />
		ORDER BY
			ID
	</select>

	<update id="updateByType">
		UPDATE
		BLOCK_CHAIN_SYNC
		<set>
			<include refid="blockChainSyncSetColumns" />
		</set>
		WHERE
		TYPE = #{type}
	</update>
	
</mapper>

