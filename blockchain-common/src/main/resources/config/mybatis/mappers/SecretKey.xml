<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="secretKey">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="secretKeyColumns">
    	<if test="null!=id">
    		and ID = #{id}
    	</if>
    	<if test="null!=extendedKeyId">
    		and EXTENDED_KEY_ID = #{extendedKeyId}
    	</if>
    	<if test="null!=address">
    		and ADDRESS = #{address}
    	</if>
    	<if test="null!=password">
    		and PASSWORD = #{password}
    	</if>
    	<if test="null!=createTime">
    		and CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		and MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="secretKeySetColumns">
		    <if test="null!=id">
		    ID = #{id},
		    </if>
		    <if test="null!=extendedKeyId">
		    EXTENDED_KEY_ID = #{extendedKeyId},
		    </if>
		    <if test="null!=address">
		    ADDRESS = #{address},
		    </if>
		    <if test="null!=password">
		    PASSWORD = #{password},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="secretKeyResultMap" type="com.sharingif.blockchain.crypto.crypto.model.entity.SecretKey">
        <result property="id" column="ID"/>
        <result property="extendedKeyId" column="EXTENDED_KEY_ID"/>
        <result property="address" column="ADDRESS"/>
        <result property="password" column="PASSWORD"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO SECRET_KEY (
        	ID
        	,EXTENDED_KEY_ID
        	,ADDRESS
        	,PASSWORD
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{id}
        	,#{extendedKeyId}
        	,#{address}
        	,#{password}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	SECRET_KEY 
	    WHERE
	    ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	SECRET_KEY 
	    WHERE
	    	1=1
		    <include refid="secretKeyColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	SECRET_KEY 
        <set>
	        <include refid="secretKeySetColumns" />
		</set>
	    WHERE
	    ID = #{id} 
	</update>
	
    <select id="queryById" resultMap="secretKeyResultMap">
		SELECT
			ID
			,EXTENDED_KEY_ID
			,ADDRESS
			,PASSWORD
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			SECRET_KEY 
		WHERE 
			ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="secretKeyResultMap">
		SELECT
			ID
			,EXTENDED_KEY_ID
			,ADDRESS
			,PASSWORD
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			SECRET_KEY
		WHERE
			1=1
			<include refid="secretKeyColumns" />
		ORDER BY
			ID
	</select>
	
	<select id="queryAll" resultMap="secretKeyResultMap">
		SELECT
			ID
			,EXTENDED_KEY_ID
			,ADDRESS
			,PASSWORD
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			SECRET_KEY 
		ORDER BY
			ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			SECRET_KEY 
		WHERE
			1=1 
			<include refid="secretKeyColumns" />
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="secretKeyResultMap">
		SELECT
			ID
			,EXTENDED_KEY_ID
			,ADDRESS
			,PASSWORD
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			SECRET_KEY
		WHERE
			1=1
			<include refid="secretKeyColumns" />
		ORDER BY
			ID
	</select>
	
</mapper>

