<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="addressListener">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="addressListenerColumns">
    	<if test="null!=blockType">
    		and BLOCK_TYPE = #{blockType}
    	</if>
    	<if test="null!=address">
    		and ADDRESS = #{address}
    	</if>
    	<if test="null!=createTime">
    		and CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		and MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="addressListenerSetColumns">
		    <if test="null!=blockType">
		    BLOCK_TYPE = #{blockType},
		    </if>
		    <if test="null!=address">
		    ADDRESS = #{address},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="addressListenerResultMap" type="com.sharingif.blockchain.account.model.entity.AddressListener">
        <result property="blockType" column="BLOCK_TYPE"/>
        <result property="address" column="ADDRESS"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO ADDRESS_LISTENER (
        	BLOCK_TYPE
        	,ADDRESS
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{blockType}
        	,#{address}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	ADDRESS_LISTENER 
	    WHERE
	    ADDRESS = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	ADDRESS_LISTENER 
	    WHERE
	    	1=1
		    <include refid="addressListenerColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	ADDRESS_LISTENER 
        <set>
	        <include refid="addressListenerSetColumns" />
		</set>
	    WHERE
	    ADDRESS = #{address} 
	</update>
	
    <select id="queryById" resultMap="addressListenerResultMap">
		SELECT
			BLOCK_TYPE
			,ADDRESS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ADDRESS_LISTENER 
		WHERE 
			ADDRESS = #{id} 
	</select>
	
	<select id="queryList" resultMap="addressListenerResultMap">
		SELECT
			BLOCK_TYPE
			,ADDRESS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ADDRESS_LISTENER
		WHERE
			1=1
			<include refid="addressListenerColumns" />
		ORDER BY
			ADDRESS
	</select>
	
	<select id="queryAll" resultMap="addressListenerResultMap">
		SELECT
			BLOCK_TYPE
			,ADDRESS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ADDRESS_LISTENER 
		ORDER BY
			ADDRESS
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			ADDRESS_LISTENER 
		WHERE
			1=1 
			<include refid="addressListenerColumns" />
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="addressListenerResultMap">
		SELECT
			BLOCK_TYPE
			,ADDRESS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			ADDRESS_LISTENER
		WHERE
			1=1
			<include refid="addressListenerColumns" />
		ORDER BY
			ADDRESS
	</select>
	
</mapper>

