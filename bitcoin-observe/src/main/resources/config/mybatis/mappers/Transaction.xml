<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="transaction">

	<!-- 用于select查询公用抽取的列 -->
	<sql id="transactionColumns">
    	<if test="null!=id">
    		and ID = #{id}
    	</if>
    	<if test="null!=blockNumber">
    		and BLOCK_NUMBER = #{blockNumber}
    	</if>
    	<if test="null!=blockHash">
    		and BLOCK_HASH = #{blockHash}
    	</if>
    	<if test="null!=txHash">
    		and TX_HASH = #{txHash}
    	</if>
    	<if test="null!=txFee">
    		and TX_FEE = #{txFee}
    	</if>
    	<if test="null!=txTime">
    		and TX_TIME = #{txTime}
    	</if>
    	<if test="null!=confirmBlockNumber">
    		and CONFIRM_BLOCK_NUMBER = #{confirmBlockNumber}
    	</if>
    	<if test="null!=txStatus">
    		and TX_STATUS = #{txStatus}
    	</if>
    	<if test="null!=createTime">
    		and CREATE_TIME = #{createTime}
    	</if>
    	<if test="null!=modifyTime">
    		and MODIFY_TIME = #{modifyTime}
    	</if>
	</sql>
	
	<sql id="transactionSetColumns">
		    <if test="null!=id">
		    ID = #{id},
		    </if>
		    <if test="null!=blockNumber">
		    BLOCK_NUMBER = #{blockNumber},
		    </if>
		    <if test="null!=blockHash">
		    BLOCK_HASH = #{blockHash},
		    </if>
		    <if test="null!=txHash">
		    TX_HASH = #{txHash},
		    </if>
		    <if test="null!=txFee">
		    TX_FEE = #{txFee},
		    </if>
		    <if test="null!=txTime">
		    TX_TIME = #{txTime},
		    </if>
		    <if test="null!=confirmBlockNumber">
		    CONFIRM_BLOCK_NUMBER = #{confirmBlockNumber},
		    </if>
		    <if test="null!=txStatus">
		    TX_STATUS = #{txStatus},
		    </if>
		    <if test="null!=createTime">
		    CREATE_TIME = #{createTime},
		    </if>
		    <if test="null!=modifyTime">
		    MODIFY_TIME = #{modifyTime},
		    </if>
	</sql>

	<resultMap id="transactionResultMap" type="com.sharingif.blockchain.bitcoin.block.model.entity.Transaction">
        <result property="id" column="ID"/>
        <result property="blockNumber" column="BLOCK_NUMBER"/>
        <result property="blockHash" column="BLOCK_HASH"/>
        <result property="txHash" column="TX_HASH"/>
        <result property="txFee" column="TX_FEE"/>
        <result property="txTime" column="TX_TIME"/>
        <result property="confirmBlockNumber" column="CONFIRM_BLOCK_NUMBER"/>
        <result property="txStatus" column="TX_STATUS"/>
        <result property="createTime" column="CREATE_TIME"/>
        <result property="modifyTime" column="MODIFY_TIME"/>
	</resultMap>

	<!-- useGeneratedKeys="true" keyProperty="xxx" for sqlserver and mysql -->
	<insert id="insert">
        INSERT INTO TRANSACTION (
        	ID
        	,BLOCK_NUMBER
        	,BLOCK_HASH
        	,TX_HASH
        	,TX_FEE
        	,TX_TIME
        	,CONFIRM_BLOCK_NUMBER
        	,TX_STATUS
        	,CREATE_TIME
        	,MODIFY_TIME
        ) VALUES (
        	#{id}
        	,#{blockNumber}
        	,#{blockHash}
        	,#{txHash}
        	,#{txFee}
        	,#{txTime}
        	,#{confirmBlockNumber}
        	,#{txStatus}
        	,#{createTime}
        	,#{modifyTime}
        )
	</insert>
	
	<delete id="deleteById">
	    DELETE FROM
	    	TRANSACTION 
	    WHERE
	    ID = #{id} 
    </delete>
    
    <delete id="deleteByCondition">
	    DELETE FROM
	    	TRANSACTION 
	    WHERE
	    	1=1
		    <include refid="transactionColumns" />
    </delete>
    
	<update id="updateById">
	    UPDATE
	    	TRANSACTION 
        <set>
	        <include refid="transactionSetColumns" />
		</set>
	    WHERE
	    ID = #{id} 
	</update>
	
    <select id="queryById" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,BLOCK_HASH
			,TX_HASH
			,TX_FEE
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION 
		WHERE 
			ID = #{id} 
	</select>
	
	<select id="queryList" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,BLOCK_HASH
			,TX_HASH
			,TX_FEE
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION
		WHERE
			1=1
			<include refid="transactionColumns" />
		ORDER BY
			ID
	</select>
	
	<select id="queryAll" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,BLOCK_HASH
			,TX_HASH
			,TX_FEE
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION 
		ORDER BY
			ID
	</select>
	
	<select id="queryPaginationListCount" resultType="Integer">
		SELECT
			COUNT(0)
		FROM
			TRANSACTION 
		WHERE
			1=1 
			<include refid="transactionColumns" />
	</select>
	
	<select id="queryPaginationList" parameterType="PaginationCondition" resultMap="transactionResultMap">
		SELECT
			ID
			,BLOCK_NUMBER
			,BLOCK_HASH
			,TX_HASH
			,TX_FEE
			,TX_TIME
			,CONFIRM_BLOCK_NUMBER
			,TX_STATUS
			,CREATE_TIME
			,MODIFY_TIME
		FROM
			TRANSACTION
		WHERE
			1=1
			<include refid="transactionColumns" />
		ORDER BY
			ID
	</select>
	
</mapper>

