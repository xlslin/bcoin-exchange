<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="false" debug="false">

	<property name="APP_NAME" value="ether-observe" />
	<springProfile name="DEV">
		<property name="LOG_HOME" value="/tmp/logs/${APP_NAME}" />
	</springProfile>
	<springProfile name="TEST">
		<property name="LOG_HOME" value="/home/blockchain/${APP_NAME}/logs" />
	</springProfile>
	<springProfile name="PROD">
		<property name="LOG_HOME" value="/home/blockchain/${APP_NAME}/logs" />
	</springProfile>

	<contextName>${APP_NAME}</contextName>


	<!-- 控制台输出 -->
	<appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{transUniqueId}] %logger{50} - %msg%n</pattern>
		</encoder>
	</appender>

	<!-- 按照每天生成日志文件 -->
	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOG_HOME}/${APP_NAME}.%d{yyyy-MM-dd}.log</fileNamePattern>
			<MaxHistory>365</MaxHistory>
		</rollingPolicy>
		<encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
			<!--格式化输出：%d表示日期，%thread表示线程名，%-5level：级别从左显示5个字符宽度%msg：日志消息，%n是换行符 -->
			<pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level [%X{transUniqueId}] %logger{50} - %msg%n</pattern>
		</encoder>
	</appender>

	<springProfile name="DEV">
		<!-- 开发 -->
		<root level="INFO">
			<appender-ref ref="CONSOLE" />
		</root>
	</springProfile>

	<springProfile name="TEST">
		<!-- 测试 -->
		<root level="INFO">
			<appender-ref ref="FILE" />
		</root>
	</springProfile>

	<springProfile name="PROD">
		<!-- 生成 -->
		<root level="INFO">
			<appender-ref ref="FILE" />
		</root>
	</springProfile>

</configuration>